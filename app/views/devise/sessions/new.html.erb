<div class="user-sessions">
  <div class="login-modal">
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field input">
        <%= image_tag "icons/email-black.svg" %>
        <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
      </div>

      <div class="field input">
        <%= image_tag "icons/lock-black.svg" %>
        <%= f.password_field :password, placeholder: "Password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field remember-me">
          <div class="checkbox">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>

          <div class="forgot-password">
            <%= link_to "Forgot Password?", new_password_path(resource_name) %>
          </div>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "btn-primary btn-large" %>
        <%= button_to "New? Sign up", new_registration_path(resource_name), method: :get, class: "btn-primary btn-large" %>
      </div>
    <% end %>
  </div>
</div>